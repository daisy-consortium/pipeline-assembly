<?xml version="1.0"?>
<component>
  <fileSets>
    
    <!-- non-executable files -->
    <fileSet>
      <directory>target/webui/daisy-pipeline-webui</directory>
      <excludes>
        <exclude>uninstall</exclude>
        <exclude>uninstall.bat</exclude>
        <exclude>start</exclude>
        <exclude>start.bat</exclude>
      </excludes>
      <outputDirectory>/webui</outputDirectory>
    </fileSet>
    
    <!-- executable files -->
    <fileSet>
      <directory>target/webui/daisy-pipeline-webui</directory>
      <includes>
        <include>uninstall</include>
        <include>uninstall.bat</include>
        <include>start</include>
        <include>start.bat</include>
      </includes>
      <fileMode>0755</fileMode>
      <outputDirectory>/webui</outputDirectory>
    </fileSet>
    
  </fileSets>
</component>
